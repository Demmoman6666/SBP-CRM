model Customer {
  id              String   @id @default(cuid())
  salonName       String?
  customerName    String?
  addressLine1    String?
  addressLine2    String?
  town            String?
  county          String?
  postCode        String?
  daysOpen        String?
  brandsInterestedIn String?
  notesField      String?   // optional free-text “Notes” field if you keep one
  salesRep        String?
  customerNumber  String?
  customerEmail   String?
  openingHours    String?
  numberOfChairs  Int?
  // relations
  notes           Note[]     @relation("CustomerNotes")
  visits          Visit[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Note {
  id         String   @id @default(cuid())
  text       String
  staff      String?
  createdAt  DateTime @default(now())
  customer   Customer @relation("CustomerNotes", fields: [customerId], references: [id])
  customerId String
}

model Visit {
  id         String   @id @default(cuid())
  date       DateTime @default(now())
  notes      String?
  staff      String?
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
}
